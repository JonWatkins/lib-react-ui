{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx"
  ]
}
